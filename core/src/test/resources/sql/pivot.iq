2	20	1900	2	2975	1	6000	2
3	30	950	1	2850	1	NULL	0
!ok

SELECT *
FROM   (SELECT deptno, job, sal
        FROM   emp)
PIVOT  (SUM(sal) AS sum_sal, COUNT(*) AS sal
        FOR (job) IN ('CL' || 'ERK', 'MANAGER' mgr, 'ANALYST' AS "MGR_SUM",null))
ORDER BY deptno;
